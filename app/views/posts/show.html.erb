<!-- Main Show Forum Post form -->

<div class='empty-black'></div>

<div class='main'>

	<h2><%= @post.title %> by <%= link_to(@post.user.username, @post.user) if @post.user%></h2>

	<p><%= raw(@post.body) %></p>
	
	<% if @current_user == @post.user %>
		<%= link_to'Edit |', edit_post_path %>
		<%= link_to'Delete', @post, :method => :delete, :confirm => "Are you sure you want to delete this Post?" %></p>
	<% end %>

	<h3>Comments</h3>
	<% @comments.each do |comment| %>
		<p><%= comment.user.username %>: <%= comment.body %></p>
	<% end %>
	<h3>Add Comment</h3>
	<%= render "comments/form" %>

	<%= link_to " Back to Forum feed", posts_path %>

</div>