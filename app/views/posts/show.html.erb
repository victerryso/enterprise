<div class='empty-black'></div>

<h2><%= @post.title %> by <%= link_to(@post.user.username, @post.user) if @post.user%></h2>

<p><%= raw(@post.body) %></p>
<p><%= image_tag(@post.image, :class => 'thumb') %></p>

<%= link_to'Edit |', edit_post_path %>
<%= link_to'Delete', @post, :method => :delete, :confirm => "Are you sure you want to delete this Post?" %></p>

<h3>Comments</h3>
<%= render @post.comments %>
<h4>Add Comment</h4>
<%= render "comments/form" %>

<%= link_to " Back to Forum feed", posts_path %>