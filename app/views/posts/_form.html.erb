<div class='post-form'>

<%= form_for @post do |f| %>
  <% @post.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%=f.label :body %>
    <%=f.text_area :body %>
  </p>

  <p><%= f.submit %> </p>
<% end %>

</div>