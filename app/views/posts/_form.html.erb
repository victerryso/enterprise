<%= form_for @post do |f| %>
    <% @post.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
   
     <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
     </p>
     <p>
      <%=f.label :body %><br/>
      <%=f.text_area :body %>
     </p>
   

    <p>
     <%= f.label :image %>
    <%= f.text_field :image %>
    </p>
   
   
   
    <p> <%= f.submit 'Create Forum' %> </p>

    <% end %>
